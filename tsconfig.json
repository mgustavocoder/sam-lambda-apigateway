{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "composite": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "moduleResolution":"node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "tests"],
  "exclude": [
    "node_modules/**/*",
    ".vscode/**/*"
  ]
}